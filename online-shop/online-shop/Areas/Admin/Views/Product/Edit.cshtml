@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create Product
            </h2>
            <hr />

        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Author" class="p-0"></label>
            <input asp-for="Author" type="text" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" type="text" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ISBN" class="p-0"></label>
            <input asp-for="ISBN" type="text" class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="price" class="p-0"></label>
            <input asp-for="price" type="number" class="form-control" />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="unitPrice" class="p-0"></label>
            <input asp-for="unitPrice" type="number" class="form-control" />
            <span asp-validation-for="unitPrice" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-seconday form-control">
                    Back
                </a>
            </div>
            <div class="col-6 col-md-3 text-end">

                <button type="submit" class="btn btn-primary form-control">Save</button>

            </div>

        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
