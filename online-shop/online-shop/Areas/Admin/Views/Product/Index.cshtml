@model List<Product>
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> New Product
            </a>
        </div>

    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>
                    Category
                </td>
                <td>
                    Author
                </td>
                <td>
                    Full price
                </td>
                <td>
                    Bulk price
                </td>
            </tr>

        </thead>

        @foreach (Product product in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @product.Title
                    </td>
                    <td>
                        @product.Author
                    </td>
                    <td>
                        @product.unitPrice
                    </td>
                    <td>
                        @product.price
                    </td>
                    <td>
                        <div class="w-75 btn-group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            </tbody>
        }





    </table>
</div>